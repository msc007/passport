<%include ./partials/navbar %>
<div class="container-fluid px-5 py-5">
    <div class="card card-body">
        <form  bg-light>
            <div class="form-group">
                <legend>Title</legend>
                <input type="email" class="form-control" id="title" placeholder="please give a name for your tournament" autocomplete="off">
            </div>
            <div class="form-group">
                <legend>Description</legend>
                <textarea class="form-control" id="description" rows="1" placeholder="please give a brief description about this tournament"></textarea>
            </div>
            <div class="form-group">
                <legend>Access</legend>
                <div class="custom-control custom-radio">
                    <input type="radio" id="public" name="accessRadio" class="custom-control-input" checked="">
                    <label class="custom-control-label" for="public">Public (other users can access)</label>
                </div>
                <div class="custom-control custom-radio">
                    <input type="radio" id="private" name="accessRadio" class="custom-control-input">
                    <label class="custom-control-label" for="private">Private (other users can't access)</label>
                </div>
            </div>
            <div class="form-group">
                <legend>Upload Image</legend>
                <input type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
            </div>

            <button type="submit" class="btn btn-block btn-primary">Submit</button>
        </form>
    </div>
    <!--dropzone-->
    <div class="card card-body">
        <form action="/file-upload" class="dropzone">
            <div class="fallback">
                <input name="file" type="file" multiple />
            </div>
        </form>
    </div>
</div>
